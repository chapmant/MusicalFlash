<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#002B36"
    android:id="@+id/tBack">
    <TextView android:text="@string/chords" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/tChord" 
    android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="90dp" android:textColor="#657b83" android:focusableInTouchMode="false" android:gravity="center"></TextView>
	<TextView android:text="@string/scales" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content" 
    android:id="@+id/tScale" 
    android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="90dp" android:textColor="#657b83" android:focusableInTouchMode="false" android:gravity="center"></TextView>
</LinearLayout>
