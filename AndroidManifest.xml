<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.chapmant.musicalflash"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MusicalFlashActivity"
                  android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ScalesActivity"
                  android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.chapmant.musicalflash.SCALES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ChordQuizActivity"
                  android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.chapmant.musicalflash.CHORDS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>